# VidSense Microservices Environment Variables
# Copy this file to .env and fill in your values

# ========================================
# Database Configuration
# ========================================
# Use your existing PostgreSQL container
# Get IP with: docker inspect 2f2f5ac5192e | grep IPAddress
DATABASE_URL=postgresql+psycopg://tips:tips123@172.17.0.2:5432/tipsdb

# ========================================
# Gemini API
# ========================================
GEMINI_API_KEY=your_gemini_api_key_here

# ========================================
# yt-dlp Configuration
# ========================================
# Browser to extract cookies from (for Instagram, Facebook)
YTDLP_COOKIES=chrome

# Or use cookies file:
# YTDLP_COOKIES=/path/to/cookies.txt

# ========================================
# Redis Configuration (for workers)
# ========================================
REDIS_URL=redis://redis:6379/0

# ========================================
# Service Ports (usually don't need to change)
# ========================================
GATEWAY_PORT=80
INGESTION_PORT=8081
STREAMING_PORT=8083
SEARCH_PORT=8082
COLLECTIONS_PORT=8084
FRONTEND_PORT=5173
REDIS_PORT=6379

# ========================================
# Worker Configuration
# ========================================
# Number of concurrent workers (adjust based on CPU)
TRANSCRIPTION_WORKERS=2
EMBEDDING_WORKERS=2

# ========================================
# Development Settings
# ========================================
# Enable hot-reload (set to false for production)
HOT_RELOAD=true

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
